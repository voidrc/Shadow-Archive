---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

interface Props {
	title: string;
	description: string;
	date: Date;
	technologies: string[];
	sourceUrl: string;
	demoUrl?: string;
	heroImage?: string;
}

const { title, description, date, technologies, sourceUrl, demoUrl, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={`${title} | ${SITE_TITLE}`} description={description} />
	</head>
	<body>
		<div class="text-container">
			<Header />
			<main>
				<article>
					<header>
						<h1>{title}</h1>
						<div class="project-meta">
							<time datetime={date.toISOString()}>
								{date.toLocaleDateString('en-US', {
									year: 'numeric',
									month: 'long',
									day: 'numeric',
								})}
							</time>
							<div class="project-tech">
								{technologies.map((tech) => (
									<span class="tech-tag">{tech}</span>
								))}
							</div>
						</div>
						{heroImage && (
							<img src={heroImage} alt={title} class="hero-image" />
						)}
					</header>
					<div class="project-content">
						<slot />
					</div>
					<footer class="project-footer">
						<div class="project-links">
							<a href={sourceUrl} class="project-link" target="_blank">
								View Source Code
							</a>
							{demoUrl && (
								<a href={demoUrl} class="project-link" target="_blank">
									View Live Demo
								</a>
							)}
						</div>
					</footer>
				</article>
			</main>
			<Footer />
		</div>
	</body>
</html>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: var(--terminal-foreground);
		font-size: 20px;
		line-height: 1.6;
	}

	article {
		background: var(--terminal-current-line);
		border: 1px solid var(--terminal-border);
		border-radius: 8px;
		padding: 2rem;
		margin: 2rem 0;
	}

	header {
		margin-bottom: 2rem;
	}

	h1 {
		color: var(--terminal-pink);
		margin: 0 0 1rem 0;
		font-size: 2.5rem;
	}

	.project-meta {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 1.5rem;
		color: var(--terminal-comment);
		font-size: 0.9rem;
	}

	.hero-image {
		width: 100%;
		max-height: 400px;
		object-fit: cover;
		border-radius: 8px;
		margin-bottom: 2rem;
	}

	.project-tech {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	.tech-tag {
		background: var(--terminal-selection);
		color: var(--terminal-cyan);
		padding: 0.25rem 0.75rem;
		border-radius: 15px;
		font-size: 0.8rem;
		font-family: 'Fira Code', monospace;
	}

	.project-content {
		margin-bottom: 2rem;
	}

	.project-content :global(h2) {
		color: var(--terminal-purple);
		margin: 2rem 0 1rem;
	}

	.project-content :global(h3) {
		color: var(--terminal-green);
		margin: 1.5rem 0 1rem;
	}

	.project-content :global(p) {
		margin: 1rem 0;
	}

	.project-content :global(ul),
	.project-content :global(ol) {
		margin: 1rem 0;
		padding-left: 2rem;
	}

	.project-content :global(li) {
		margin: 0.5rem 0;
	}

	.project-content :global(code) {
		background: var(--terminal-selection);
		color: var(--terminal-yellow);
		padding: 0.2rem 0.4rem;
		border-radius: 4px;
		font-family: 'Fira Code', monospace;
	}

	.project-content :global(pre) {
		background: var(--terminal-selection);
		padding: 1rem;
		border-radius: 8px;
		overflow-x: auto;
		margin: 1rem 0;
	}

	.project-content :global(pre code) {
		background: none;
		padding: 0;
	}

	.project-footer {
		border-top: 1px solid var(--terminal-border);
		padding-top: 1.5rem;
		margin-top: 2rem;
	}

	.project-links {
		display: flex;
		gap: 1rem;
	}

	.project-link {
		color: var(--terminal-green);
		text-decoration: none;
		font-size: 0.9rem;
		transition: all 0.2s ease;
	}

	.project-link:hover {
		color: var(--terminal-pink);
		text-shadow: 0 0 8px rgba(255, 121, 198, 0.3);
	}

	@media (max-width: 720px) {
		main {
			padding: 1rem;
			width: 100%;
		}

		article {
			padding: 1rem;
		}

		h1 {
			font-size: 2rem;
		}

		.project-meta {
			flex-direction: column;
			align-items: flex-start;
		}
	}
</style> 