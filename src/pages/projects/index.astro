---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
const sortedProjects = projects.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<html lang="en">
	<BaseHead title="Projects | Voidborne Archive" />
	<body>
		<Header />
		<main>
			<h1>Projects</h1>
			<ul class="projects-list">
				{
					sortedProjects.map((project) => (
						<li>
							<a href={`/projects/${project.slug}`}>
								<h2>{project.data.title}</h2>
								<time datetime={project.data.date.toISOString()}>
									{project.data.date.toLocaleDateString('en-US', {
										year: 'numeric',
										month: 'long',
										day: 'numeric'
									})}
								</time>
								<p>{project.data.description}</p>
							</a>
						</li>
					))
				}
			</ul>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: var(--terminal-foreground);
		font-size: 20px;
		line-height: 1.6;
	}

	.projects-list {
		list-style: none;
		padding: 0;
		margin: 2rem 0;
	}

	.projects-list li {
		margin-bottom: 2rem;
		border: 1px solid var(--terminal-border);
		border-radius: 4px;
		padding: 1rem;
		transition: all 0.2s ease;
	}

	.projects-list li:hover {
		border-color: var(--terminal-pink);
		box-shadow: 0 0 8px rgba(255, 121, 198, 0.3);
	}

	.projects-list a {
		text-decoration: none;
		color: inherit;
	}

	.projects-list h2 {
		color: var(--terminal-purple);
		margin: 0 0 0.5rem 0;
		font-family: 'Fira Code', monospace;
	}

	.projects-list time {
		color: var(--terminal-comment);
		font-size: 0.9em;
		font-family: 'Fira Code', monospace;
	}

	.projects-list p {
		margin: 0.5rem 0 0 0;
		color: var(--terminal-foreground);
	}

	@media (max-width: 720px) {
		main {
			padding: 1rem;
			font-size: 18px;
		}
	}
</style> 