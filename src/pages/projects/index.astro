---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import { Image } from 'astro:assets';

const projects = (await getCollection('projects')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE + ' | Projects'} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 90%;
				max-width: 1200px;
				margin: 2em auto;
				padding: 2em;
				background-color: transparent;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
				background: rgba(68, 71, 90, 0.3);
				border: 1px solid var(--terminal-border);
				border-radius: 8px;
				padding: 1rem;
				transition: all 0.3s ease;
			}
			ul li:hover {
				background: rgba(68, 71, 90, 0.5);
				box-shadow: 0 0 20px rgba(189, 147, 249, 0.3);
				transform: translateY(-2px);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
				max-width: 800px;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 8px;
				width: 100%;
				height: auto;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: var(--terminal-purple);
				line-height: 1;
			}
			.date {
				margin: 0;
				color: var(--terminal-comment);
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: var(--terminal-cyan);
			}
			ul a:hover img {
				box-shadow: 0 0 15px rgba(189, 147, 249, 0.4);
			}
			@media (max-width: 720px) {
				main {
					width: 95%;
					margin: 1em auto;
					padding: 1em;
				}
				ul {
					gap: 1rem;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<!-- Background Decorations -->
		<div class="hacker-symbols"></div>
		<div class="scan-line"></div>
		<div class="circuit-pattern"></div>
		<div class="corner-decoration top-left"></div>
		<div class="corner-decoration top-right"></div>
		<div class="corner-decoration bottom-left"></div>
		<div class="corner-decoration bottom-right"></div>
		
		<Header />
		<main>
			<h1>‚ùØ Projects</h1>
			<ul>
				{projects.map((project) => (
					<li>
						<a href={`/projects/${project.id}/`}>
							{project.data.heroImage && (
								<Image
									width={400}
									height={200}
									src={project.data.heroImage}
									alt=""
								/>
							)}
							<h4 class="title">{project.data.title}</h4>
							<time class="date">
								<FormattedDate date={project.data.pubDate} />
							</time>
						</a>
					</li>
				))}
			</ul>
		</main>
		<Footer />
	</body>
</html>
