---
// This component is for CSS-only background effects.
---

<div class="background-effects">
    <!-- Floating Symbols -->
    <div class="floating-symbol s1">01</div>
    <div class="floating-symbol s2">10</div>
    <div class="floating-symbol s3">{'<'}</div>
    <div class="floating-symbol s4">{'>'}</div>
    <div class="floating-symbol s5">{}</div>
    <div class="floating-symbol s6">#</div>
    <div class="floating-symbol s7">;</div>
    <div class="floating-symbol s8">()</div>
    <div class="floating-symbol s9">+=</div>
    <div class="floating-symbol s10">~</div>
</div>
<style>
    .background-effects {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        z-index: -10;
        pointer-events: none;
    }

    /* Matrix Rain Effect */
    .background-effects::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: 
            linear-gradient(90deg, transparent 98%, var(--terminal-green) 100%),
            linear-gradient(180deg, transparent 98%, var(--terminal-green) 100%);
        background-size: 50px 50px;
        opacity: 0.1;
        z-index: -2;
        animation: matrix-rain 20s linear infinite;
    }

    /* Scan Line Effect */
    .background-effects::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 2px;
        background: linear-gradient(90deg, 
            transparent 0%, 
            var(--terminal-green) 50%, 
            transparent 100%);
        opacity: 0.3;
        z-index: -1;
        animation: scan-line 8s linear infinite;
    }

    /* Floating Hacker Symbols */
    .floating-symbol {
        position: fixed;
        color: var(--terminal-green);
        font-family: 'Fira Code', monospace;
        font-size: 1.5em;
        opacity: 0; /* start hidden */
        z-index: -1;
        animation: float 10s ease-in-out infinite;
        text-shadow: 0 0 5px;
    }
    .s1 { top: 10%; left: 5%; font-size: 1.5em; color: var(--terminal-green); animation-duration: 6s; }
    .s2 { top: 20%; right: 10%; font-size: 1.2em; color: var(--terminal-purple); animation-duration: 8s; animation-delay: 2s; }
    .s3 { top: 80%; left: 15%; font-size: 1.8em; color: var(--terminal-cyan); animation-duration: 7s; animation-delay: 1s;}
    .s4 { top: 60%; right: 20%; font-size: 1.4em; color: var(--terminal-pink); animation-duration: 9s; animation-delay: 3s;}
    .s5 { top: 30%; left: 30%; font-size: 1.3em; color: var(--terminal-yellow); animation-duration: 10s; animation-delay: 0.5s; }
    .s6 { top: 50%; left: 50%; font-size: 1.6em; color: var(--terminal-orange); animation-duration: 12s; animation-delay: 4s; }
    .s7 { top: 90%; right: 5%; font-size: 1.1em; color: var(--terminal-red); animation-duration: 5s; animation-delay: 1.5s; }
    .s8 { top: 40%; left: 60%; font-size: 1.7em; color: var(--terminal-green); animation-duration: 11s; animation-delay: 5s; }
    .s9 { top: 70%; left: 80%; font-size: 1.0em; color: var(--terminal-purple); animation-duration: 13s; animation-delay: 2.5s; }
    .s10 { top: 5%; right: 40%; font-size: 1.9em; color: var(--terminal-cyan); animation-duration: 15s; animation-delay: 6s; }
</style> 